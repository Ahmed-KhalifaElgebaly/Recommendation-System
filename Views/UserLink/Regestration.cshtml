@model Users
<!DOCTYPE html>
<html>
<head>
    <title>Sign Up Page</title>
    <link rel="stylesheet" href="~/SignUp/css/SignUp.css">
</head>
<body>
    <header>
        <h1>Sign Up Page</h1>
    </header>
    <main>
        <form method="post" enctype="multipart/form-data"
              asp-controller="UserLink"
              asp-action="Regestration">
            @*First-Name*@
            <label for="First Name">First-Name:</label>
            <input type="text" id="First_Name" name="First_Name" required
                   asp-for="First_Name">
            <span asp-validation-for="First_Name"></span>

            @*Last-Name*@
            <label for="Last Name">Last-Name:</label>
            <input type="text" id="Last_Name" name="Last_Name" required
                   asp-for="Last_Name">
            <span asp-validation-for="Last_Name"></span>

            @*E-mail*@
            <label for="email">E-mail:</label>
            <input type="email" id="E-mail" name="E-mail" required
                   asp-for="Email">
            <span asp-validation-for="Email"></span>

            @*Password*@
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required
                   asp-for="Password">
            <span asp-validation-for="Password"></span>

            @*confirm-password*@
            <label for="confirm-password">Confirm-Password:</label>
            <input type="password" id="confirm-password" name="confirm-password" required
                   asp-for="Confirm_Password">
            <span asp-validation-for="Confirm_Password"></span>

            @*Date-Of-Birth*@
            <label for="Date Of Birth">Date-Of-Birth:</label>
            <input type="text" id="Date Of Birth" name="Date Of Birth" Placeholder="ex:dd/mm/yy" required
                   asp-for="DateOfBirth">
            <span asp-validation-for="DateOfBirth"></span>

            @*Phone-Number*@
            <label for="Phone-Number">Phone-Number:</label>
            <input type="text" id="Phone-Number" name="Phone-Number" required
                   asp-for="PhoneNumber">
            <span asp-validation-for="PhoneNumber"></span>

            @*Country*@
            <label for="Country">Country:</label>
            <input type="text" id="Country" name="Country" required
                   asp-for="Country">
            <span asp-validation-for="Country"></span>

            @*City*@
            <label for="City">City:</label>
            <input type="text" id="City" name="City" required
                   asp-for="City">
            <span asp-validation-for="City"></span>

            @*Address*@
            <label for="Address">Address:</label>
            <input type="text" id="Address" name="Address" required
                   asp-for="Address">
            <span asp-validation-for="Address"></span>

            @*Sign-Up button*@
            <button type="submit" class="btn btn-solid"><b>Create Account</b></></button>
        </form>
    </main>
    <footer>
        <p>&copy; 2023 Sign Up Page</p>
    </footer>
</body>
</html>